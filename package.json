{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "test": "turbo test",
    "scanner": "turbo scanner",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=api^... --filter=web^... && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.5.1",
    "prettier-plugin-jsdoc": "^1.3.2",
    "turbo": "^2.4.4",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jsdoc"
    ],
    "jsdocPrintWidth": 120
  }
}